<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/container_body"
            >

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@drawable/botom_dropshadow"
                android:rotation="180" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <Button
                android:id="@+id/shop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:drawableTop="@mipmap/social_off"
                android:padding="5dp"
                android:text="Social"
                android:textAllCaps="true"
                android:textColor="@color/unselected" />

            <Button
                android:id="@+id/cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:drawableTop="@mipmap/traffic_on"
                android:padding="5dp"
                android:text="Traffic"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary" />


            <Button
                android:id="@+id/stores"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:drawableTop="@mipmap/list_off"
                android:padding="5dp"
                android:text="Lists"
                android:textAllCaps="true"
                android:textColor="@color/unselected" />


            <Button
                android:id="@+id/offers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:drawableTop="@mipmap/offers_off"
                android:padding="5dp"
                android:text="Offers"
                android:textAllCaps="true"
                android:textColor="@color/unselected" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="70dp"
        android:background="@color/white"
        android:orientation="vertical">

        <include
            android:id="@+id/app_bar"
            layout="@layout/app_bar" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/seekBar"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="60dp"
                android:text="5 item"
                android:textAllCaps="true"
                android:textColor="#555555" />

            <View
                android:id="@+id/circle"
                android:layout_width="21.5dp"
                android:layout_height="21.5dp"
                android:layout_alignBottom="@+id/seekBar"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="18dp"
                android:background="@drawable/circle_border"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/seekBar"
                android:layout_marginBottom="60dp"
                android:paddingLeft="10sp"
                android:text="1 item"
                android:textAllCaps="true"
                android:textColor="#555555" />

            <View
                android:id="@+id/circle1"
                android:layout_width="21.5dp"
                android:layout_height="21.5dp"
                android:layout_alignBottom="@+id/seekBar"
                android:layout_alignEnd="@id/seekBar"
                android:layout_alignRight="@id/seekBar"
                android:layout_marginBottom="18dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/circle_border"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/seekBar"
                android:layout_alignEnd="@id/seekBar"
                android:layout_alignRight="@id/seekBar"
                android:layout_marginBottom="60dp"
                android:paddingRight="10dp"
                android:text="10 &amp; above"
                android:textAllCaps="true"
                android:textColor="#555555" />

            <View
                android:id="@+id/circle2"
                android:layout_width="21.5dp"
                android:layout_height="21.5dp"
                android:layout_alignBottom="@+id/seekBar"
                android:layout_marginBottom="18dp"
                android:layout_marginLeft="12dp"
                android:background="@drawable/circle_border"
                android:visibility="visible" />

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="bottom"
                android:layout_marginBottom="78dp"
                android:background="#00000000"
                android:max="2"
                android:progressDrawable="@drawable/seek_gr"
                android:theme="@style/MySeekBarTheme"
                android:thumb="@mipmap/seek_thumb"
                android:thumbOffset="12dp" />

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="48dp"
                android:background="@drawable/dropshadow" />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView5"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/est_buton"
                android:drawableLeft="@mipmap/est"
                android:paddingLeft="15dp"
                android:paddingRight="20dp"
                android:text="Estimated checkout time 3min"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/view2"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:layout_marginBottom="170dp"
                app:srcCompat="@mipmap/traffic_layout" />

        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>
    <fragment
        android:id="@+id/fragment_navigation_drawer"
        android:name="co.onmymobile.retailapp.navigationdrawer.FragmentDrawer"
        android:layout_width="@dimen/nav_drawer_width"
        android:layout_height="fill_parent"
        android:layout_gravity="start"
        android:layout="@layout/nav_fragment_drawer"
        tools:layout="@layout/nav_fragment_drawer" />
</android.support.v4.widget.DrawerLayout>